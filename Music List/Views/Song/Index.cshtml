
@model IEnumerable<Music_List.Models.Song>

    <div class="container">
        <div class="row">
            <div class="col-sm">
            </div>
            <div class="col-sm">
            </div>
            <div class="col-sm text-center">
                    <div class="btn mx-2">
                        <a asp-controller="Song" asp-action="Create" class="btn btn-dark">Create new Song</a>
                    </div>
            </div>
        </div>

        @if(Model.Count() > 0)
            {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Song
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            Changes
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var song in Model)
                    {
                    <tr>
                        <td width="10%">@song.Id</td>
                        <td width="30%">@song.Title</td>
                        <td width="30%">@song.Author</td>
                        <td width="30%">
                            <div class="w-100 btn-group"role="group">
                                                   <!--will have to add asp-route-Id below so it knows what it is deleting-->
                                <a asp-controller="Song" asp-action="Update" asp-route-Id="@song.Id" class="btn btn-dark mx-1">Update</a>
                                <a asp-controller="Song" asp-action="Delete" asp-route-Id="@song.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            }
            else
            {
                <p>No Songs Created yet</p>
            }

    </div>